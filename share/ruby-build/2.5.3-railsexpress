build_package_patch_ruby_railsexpress() {
  fetch_git rvm-patchsets git://github.com/skaes/rvm-patchsets.git master
  cat rvm-patchsets/patches/ruby/2.5.3/railsexpress/* | patch -p1
}

install_package "openssl-1.1.1g" "https://www.openssl.org/source/openssl-1.1.1g.tar.gz#ddb04774f1e32f0c49751e21b67216ac87852ceb056b75209af2443400636d46" mac_openssl --if has_broken_mac_openssl
install_package "ruby-2.5.3" "https://cache.ruby-lang.org/pub/ruby/2.5/ruby-2.5.3.tar.bz2#228a787ba68a7b20ac6e1d5af3d176d36e8ed600eb754d6325da341c3088ed76" patch_ruby_railsexpress warn_unsupported ldflags_dirs enable_shared standard verify_openssl
