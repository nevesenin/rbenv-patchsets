build_package_patch_ruby_railsexpress() {
  fetch_git rvm-patchsets git://github.com/skaes/rvm-patchsets.git master
  cat rvm-patchsets/patches/ruby/2.6.4/railsexpress/* | patch -p1
}

install_package "openssl-1.1.1c" "https://www.openssl.org/source/openssl-1.1.1c.tar.gz#f6fb3079ad15076154eda9413fed42877d668e7069d9b87396d0804fdb3f4c90" mac_openssl --if has_broken_mac_openssl
install_package "ruby-2.6.4" "https://cache.ruby-lang.org/pub/ruby/2.6/ruby-2.6.4.tar.bz2#fa1ecc67b99fa13201499002669412eae7cfbe2c30c4f1f4526e8491edfc5fa7" patch_ruby_railsexpress ldflags_dirs standard verify_openssl
