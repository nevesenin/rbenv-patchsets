build_package_patch_ruby_railsexpress() {
  fetch_git rvm-patchsets git://github.com/skaes/rvm-patchsets.git master
  cat $(
    sed -r "s,(railsexpress/.*),rvm-patchsets/patches/ruby/2.6.1/\1,g" \
    rvm-patchsets/patchsets/ruby/2.6.1/railsexpress
  ) | patch -p1
}

install_package "openssl-1.1.1l" "https://www.openssl.org/source/openssl-1.1.1l.tar.gz#0b7a3e5e59c34827fe0c3a74b7ec8baef302b98fa80088d7f9153aa16fa76bd1" mac_openssl --if has_broken_mac_openssl
install_package "ruby-2.6.1" "https://cache.ruby-lang.org/pub/ruby/2.6/ruby-2.6.1.tar.bz2#82c9402920eac9ce777beb3f34eeadc2a3f3ce80f25004bbf54b5ed1280ba099" patch_ruby_railsexpress ldflags_dirs enable_shared standard verify_openssl
