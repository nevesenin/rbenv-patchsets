build_package_patch_ruby_railsexpress() {
  fetch_git rvm-patchsets git://github.com/skaes/rvm-patchsets.git master
  for p in rvm-patchsets/patches/ruby/2.2.4/railsexpress/* ; do
    patch -p1 < $p
  done
}

install_package "openssl-1.0.1p" "https://www.openssl.org/source/openssl-1.0.1r.tar.gz#784bd8d355ed01ce98b812f873f8b2313da61df7c7b5677fcf2e57b0863a3346" mac_openssl --if has_broken_mac_openssl
install_package "ruby-2.2.4" "https://cache.ruby-lang.org/pub/ruby/2.2/ruby-2.2.4.tar.gz#b6eff568b48e0fda76e5a36333175df049b204e91217aa32a65153cc0cdcb761" patch_ruby_railsexpress ldflags_dirs standard verify_openssl
